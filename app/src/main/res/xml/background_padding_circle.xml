<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <stroke
                android:width="1dp"
                android:color="#ffff"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <solid android:color="#fff" />
        </shape>
    </item>
    <item>
        <selector >
            <item android:state_pressed="true">
                <!--rectangle 長方形 可以畫出直角形，圓角形，弧形等-->
                <shape android:shape="oval">
                    <!--邊框-->
                    <stroke android:width="1dip" android:color="@color/seagreen" />
                    <!--漸層顏色-->
                    <gradient android:angle="-90" android:startColor="@color/darkslategray" android:endColor="@color/darkslategray"  />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>